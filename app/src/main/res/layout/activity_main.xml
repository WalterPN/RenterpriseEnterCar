<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    //Grid Layout extends just below the first row of icons
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/gridLayout"
        android:layout_marginBottom="400sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        //Image Button for Van
        <ImageButton
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/ibVan"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="left|center_horizontal"
            android:scaleType="center"
            android:background="@drawable/van" />

        //Image Button for Car
        <ImageButton
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/ibCar"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="left|center_horizontal"
            android:scaleType="center"
            android:background="@drawable/car" />

        //Image Button for Truck
        <ImageButton
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/ibTruck"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_gravity="left|center_horizontal"
            android:scaleType="center"
            android:background="@drawable/truck" />

        //Image Button for Box
        <ImageButton
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/ibBox"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="left|center_horizontal"
            android:scaleType="center"
            android:background="@drawable/box" />

    </GridLayout>

    <ImageView
        android:layout_width="200sp"
        android:layout_height="200sp"
        android:id="@+id/ivDisplay"
        android:layout_marginTop="104dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
